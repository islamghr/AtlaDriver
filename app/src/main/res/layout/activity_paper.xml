<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/back3"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_scrollview"
        android:background="#99000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/parent_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_marginTop="?actionBarSize"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_id_card"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="uploade your paper"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/wight_dark"
                    android:textSize="16dp"
                    android:textStyle="bold"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingRight="60dp"
                    android:paddingLeft="60dp"
                    android:gravity="center"
                    android:text="When you upload your papers, they will be reviewed and you will be contacted to take your copy and take the paper "
                    android:textColor="@color/wight_dark"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Upload your ID card"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/wight"
                            android:textSize="12sp" />
                        <FrameLayout
                            android:id="@+id/imageParent"
                            android:layout_width="120dp"
                            android:layout_gravity="center"
                            android:layout_height="120dp"
                            android:layout_marginTop="5dp">


                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                app:srcCompat="@drawable/camera_back"
                                android:background="@drawable/back_signup"
                                 />

                            <ImageView
                                android:id="@+id/favorImage"
                                android:layout_width="120dp"
                                android:scaleType="centerCrop"
                                android:layout_height="120dp" />
                            <ImageView
                                android:id="@+id/take_photo_profile"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/camera_party_mode"
                                />

                        </FrameLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="Lift your driver's license"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/wight"
                            android:textSize="12sp" />
                        <FrameLayout
                            android:id="@+id/imageParent1"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp">


                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                app:srcCompat="@drawable/camera_back"
                                android:background="@drawable/back_signup"
                                />

                            <ImageView
                                android:id="@+id/favorImage1"
                                android:layout_width="120dp"
                                android:scaleType="centerCrop"
                                android:layout_height="120dp" />
                            <ImageView
                                android:id="@+id/take_photo_profile1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/camera_party_mode"
                                 />

                        </FrameLayout>
                    </LinearLayout>


                </LinearLayout>



                <Button
                    android:id="@+id/continueBtn"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/signup_button_back"
                    android:text="save"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateTint="?android:colorAccent"
        android:indeterminateTintMode="src_in"
        android:visibility="gone" />
</FrameLayout>
