<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?actionBarSize">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/wight_meduim">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/parent_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="?actionBarSize">


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/back_signup"
                         />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <ImageView
                        android:id="@+id/take_photo_profile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/camera_party_mode"
                        />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/fnameET"
                            android:layout_width="match_parent"

                            android:layout_height="35dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/back_signup"
                            android:drawablePadding="10dp"
                            android:gravity="center|right"
                            android:hint="last name"
                            android:paddingLeft="10dp"
                            android:paddingRight="30dp"
                            android:textColor="@color/gray_text"
                            android:textColorHint="@color/gray_text"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="right|center"
                            app:srcCompat="@drawable/format_align_justify"
                            />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/lnameET"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/back_signup"
                            android:drawablePadding="10dp"
                            android:gravity="center|right"
                            android:hint="first name"
                            android:paddingLeft="10dp"
                            android:paddingRight="30dp"
                            android:textColor="@color/gray_text"
                            android:textColorHint="@color/gray_text"
                            android:textSize="16sp" />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="right|center"
                            app:srcCompat="@drawable/format_align_justify"
                            />
                    </FrameLayout>


                </LinearLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="10dp">


                    <EditText
                        android:id="@+id/phoneET"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/back_signup"
                        android:drawablePadding="10dp"
                        android:gravity="center|right"
                        android:hint="phone"
                        android:inputType="phone"
                        android:paddingLeft="10dp"
                        android:paddingRight="30dp"
                        android:textColor="@color/gray_text"
                        android:textColorHint="@color/gray_text"
                        android:textSize="16sp" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="right|center"
                        app:srcCompat="@drawable/cellphone_android" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:id="@+id/addressET"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/back_signup"
                        android:drawablePadding="10dp"
                        android:gravity="center|right"
                        android:hint="address"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:paddingRight="30dp"
                        android:textColor="@color/gray_text"
                        android:textColorHint="@color/gray_text"
                        android:textSize="16sp" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="right|center"
                        app:srcCompat="@drawable/map_marker" />
                </FrameLayout>

                <Button
                    android:id="@+id/EditProfileBtn"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/signup_button_back"
                    android:text="save"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="40dp"
                    android:textStyle="bold"
                    android:layout_marginRight="40dp"
                    android:textAllCaps="true"
                    android:layout_marginBottom="20dp"
                    android:textColor="#FFF"
                    android:textSize="14sp"/>




            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateTint="?android:colorAccent"
        android:indeterminateTintMode="src_in"
        android:visibility="gone" />
</FrameLayout>
